@model ProductUpdateVM

@{
    ViewData["Title"] = "Update";
}

<div class="row">
    <div class="col-12 my-4 mx-auto">
        <div class="card shadow mb-4">
            <div class="card-header py-4">
                Əlavə et <a asp-area="CMS" asp-controller="Product" asp-action="Index" class="float-right btn btn-outline-secondary">Geriyə get</a>
                <hr>
                <br>
                @* <ul class="nav nav-pills nav-fill justify-content-center">
                    <li class="nav-item">
                        <button class="btn btn-outline-secondary" onclick="langAZ()" >Azərbaycan dili</button>
                    </li>
                    <li class="nav-item">
                        <button class="btn btn-outline-secondary" onclick="langRU()" >русский</a>
                    </li>
                    <li class="nav-item">
                        <button class="btn btn-outline-secondary" onclick="langEN()" >English</button>
                    </li>                    
                </ul>             *@
            </div>
            <div class="card-body">
                <form asp-area="CMS" asp-controller="Product" asp-action="Update" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label">Ad (AZ)</label>
                        <input asp-for="NameAZ" type="text" class="form-control" />
                        <span asp-validation-for="NameAZ"></span>
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Ad (RU)</label>
                        <input asp-for="NameRU" type="text" class="form-control" />
                        <span asp-validation-for="NameRU"></span>
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Ad (EN)</label>
                        <input asp-for="NameEN" type="text" class="form-control" />
                        <span asp-validation-for="NameEN"></span>
                        <span class="text-danger"></span>
                    </div>
                    <div id="kategoriSelect" class="form-group">
                        <label class="control-label">Kateqoriya</label>
                        <select asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))" class="form-control"></select>
                        <span asp-validation-for="CategoryId"></span>
                        <span class="text-danger"></span>
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="addnae">Əsas şəkil</span>
                        </div>
                        <div class="custom-file">
                            <input asp-for="MainPhotoFile" type="file" class="custom-file-input" id="file" aria-describedby="addnae" accept=".png, .jpeg, .jpg">
                            <label class="custom-file-label" for="inputGroupFile01">Şəkil yüklə</label>
                        </div>
                        <span asp-validation-for="MainPhotoFile"></span>
                        <span class="text-danger"></span>
                    </div>     
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="addnae">Nutrition Fact şəkil</span>
                        </div>
                        <div class="custom-file">
                            <input asp-for="NutritionFactPhotoFile" type="file" class="custom-file-input" id="file" aria-describedby="addnae" accept=".png, .jpeg, .jpg">
                            <label class="custom-file-label" for="inputGroupFile01">Şəkil yüklə</label>
                        </div>
                        <span asp-validation-for="NutritionFactPhotoFile"></span>
                        <span class="text-danger"></span>
                    </div>
                    <div id="digerSekiller">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="addnae">Digər şəkillər</span>
                            </div>
                            <div class="custom-file">
                                <input asp-for="PhotoFiles" type="file" multiple class="custom-file-input" id="file" aria-describedby="addnae" accept=".jpeg, .jpg, .png">
                                <label class="custom-file-label" for="inputGroupFile01">Şəkil yüklə</label>
                            </div>
                            <span asp-validation-for="PhotoFiles"></span>
                            <span class="text-danger"></span>
                        </div>
                    </div>
                    <div id="kategoriSelect" class="form-group">
                        <label class="control-label">Kateqoriya</label>
                        <select asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))" class="form-control"></select>
                        <span asp-validation-for="CategoryId"></span>
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <strong class="control-label">Əsas şəkil</strong>
                        <img src="~/files/product/@Model.PhotoUrl" style="width: 50px;height: 50px;object-fit: cover;border-radius: 10px;filter: drop-shadow(20px);filter: drop-shadow(3px 3px 4px #000);display: block;" />
                    </div>
                    <div class="input-group mb-3">
                        <div class="custom-file">
                            <input asp-for="MainPhotoFile" type="file" class="custom-file-input" id="file" aria-describedby="addnae" accept=".jpeg, .jpg, .png">
                            <label class="custom-file-label" for="inputGroupFile01">Şəkil yüklə</label>
                        </div>
                    </div>    
                    <div class="form-group">
                        <strong class="control-label">Nutrition Fact şəkil</strong>
                        <img src="~/files/product/@Model.NutritionFactsPhotoUrl" style="width: 50px;height: 50px;object-fit: cover;border-radius: 10px;filter: drop-shadow(20px);filter: drop-shadow(3px 3px 4px #000);display: block;" />
                    </div>
                    <div class="input-group mb-3">
                        <div class="custom-file">
                            <input asp-for="NutritionFactPhotoFile" type="file" class="custom-file-input" id="file" aria-describedby="addnae" accept=".jpeg, .jpg, .png">
                            <label class="custom-file-label" for="inputGroupFile01">Şəkil yüklə</label>
                        </div>
                    </div>                   
                    <div class="form-group">
                        <label class="control-label">Status</label>
                        <input asp-for="IsActive" type="checkbox" style="width: 20px; height: 20px; margin-left: 20px; position: relative; top: 5px;" />
                    </div>  
                    <div class="form-group">
                        <input type="submit" value="Təsdiq et" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
